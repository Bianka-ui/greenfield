{
  "name": "greenfield-client",
  "version": "1.0.0",
  "description": "HTML5 Wayland compositor",
  "bin": {
    "greenfield": "./local/src/index.js"
  },
  "scripts": {
    "prepare:browser:generate:session": "westfield-scanner-server protocol/session.xml -o browser/src/protocol/session-browser-protocol.js",
    "prepare:server:generate:session": "westfield-scanner-client protocol/session.xml -o local/src/protocol/session-client-protocol.js",
    "prepare:browser:generate:rtc": "westfield-scanner-server protocol/rtc.xml -o browser/src/protocol/rtc-browser-protocol.js",
    "prepare:server:generate:rtc": "westfield-scanner-client protocol/rtc.xml -o local/src/protocol/rtc-client-protocol.js",
    "prepare:browser:generate:greenfield": "westfield-scanner-server protocol/greenfield.xml -o browser/src/protocol/greenfield-browser-protocol.js",
    "prepare:server:generate:greenfield": "westfield-scanner-client protocol/greenfield.xml -o local/src/protocol/greenfield-client-protocol.js",
    "prepare:server:generate:wayland": "wayland-server-bindings-generator protocol/wayland.xml -o local/src/protocol/wayland",
    "prepare:browser:generate": "mkdir -p browser/src/protocol/ && npm run prepare:browser:generate:greenfield && npm run prepare:browser:generate:rtc && npm run prepare:browser:generate:session",
    "prepare:server:generate": "rm -rf local/src/protocol && mkdir -p local/src/protocol/wayland && npm run prepare:server:generate:wayland && mkdir -p local/src/protocol/ && npm run prepare:server:generate:greenfield && npm run prepare:server:generate:rtc && npm run prepare:server:generate:session",
    "prepare:browser:webpack": "webpack --config webpack.config.js",
    "prepare:browser": "npm run prepare:browser:generate && npm run prepare:browser:webpack",
    "prepare:server": "npm run prepare:server:generate",
    "prepare": "npm run prepare:server && npm run prepare:browser",
    "start": "node ./local/src/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/udevbe/greenfield.git"
  },
  "keywords": [
    "wayland",
    "html5",
    "compositor",
    "linux",
    "display",
    "server"
  ],
  "author": "Erik De Rijcke <derijcke.erik@gmail.com> (http://www.udev.be)",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/udevbe/greenfield/issues"
  },
  "homepage": "https://github.com/udevbe/greenfield#readme",
  "dependencies": {
    "express": "^4.15.5",
    "fastcall": "0.2.4",
    "gstreamer-superficial": "^0.0.5",
    "socketwatcher": "0.3.0",
    "wayland-server-bindings-runtime": "0.0.45",
    "westfield-runtime-client": "0.0.16",
    "westfield-runtime-server": "0.0.16",
    "wrtc": "^0.0.65",
    "ws": "^4.0.0"
  },
  "devDependencies": {
    "standard": "^10.0.2",
    "wayland-server-bindings-generator": "0.0.45",
    "webpack": "^3.10.0",
    "westfield-scanner-client": "0.0.16",
    "westfield-scanner-server": "0.0.16"
  }
}
