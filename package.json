{
  "name": "greenfield-client",
  "version": "1.0.0",
  "description": "HTML5 Wayland compositor",
  "bin": {
    "greenfield": "./local/src/index.js"
  },
  "scripts": {
    "prepare:browser:generate:xdgshell": "westfield-scanner-server protocol/xdg-shell.xml -o browser/src/protocol/xdg-shell-browser-protocol.js",
    "prepare:browser:generate:session": "westfield-scanner-server protocol/session.xml -o browser/src/protocol/session-browser-protocol.js",
    "prepare:server:generate:session": "westfield-scanner-client protocol/session.xml -o local/src/protocol/session-client-protocol.js",
    "prepare:browser:generate:rtc": "westfield-scanner-server protocol/rtc.xml -o browser/src/protocol/rtc-browser-protocol.js",
    "prepare:server:generate:rtc": "westfield-scanner-client protocol/rtc.xml -o local/src/protocol/rtc-client-protocol.js",
    "prepare:browser:generate:greenfield": "westfield-scanner-server protocol/greenfield.xml -o browser/src/protocol/greenfield-browser-protocol.js",
    "prepare:server:generate:greenfield": "westfield-scanner-client protocol/greenfield.xml -o local/src/protocol/greenfield-client-protocol.js",
    "prepare:server:generate:wayland": "wayland-server-bindings-generator protocol/wayland.xml -o local/src/protocol/wayland",
    "prepare:server:generate:xdgshell": "wayland-server-bindings-generator protocol/xdg-shell.xml -o local/src/protocol/wayland && westfield-scanner-client protocol/xdg-shell.xml -o local/src/protocol/xdg-shell-client-protocol.js",
    "prepare:browser:generate": "mkdir -p browser/src/protocol/ && npm run prepare:browser:generate:greenfield && npm run prepare:browser:generate:rtc && npm run prepare:browser:generate:session && npm run prepare:browser:generate:xdgshell",
    "prepare:server:generate": "rm -rf local/src/protocol && mkdir -p local/src/protocol/wayland && npm run prepare:server:generate:wayland && npm run prepare:server:generate:xdgshell && mkdir -p local/src/protocol/ && npm run prepare:server:generate:greenfield && npm run prepare:server:generate:rtc && npm run prepare:server:generate:session",
    "prepare:browser:webpack:prod": "webpack --config browser/build.config/webpack.config.prod.js",
    "prepare": "npm run prepare:server:generate && npm run prepare:browser:generate && npm run prepare:browser:webpack:prod",
    "prepare:browser:webpack:dev": "webpack --config browser/build.config/webpack.config.dev.js",
    "prepare:dev": "npm run prepare:server:generate && npm run prepare:browser:generate && npm run prepare:browser:webpack:dev",
    "start": "node ./local/src/index.js",
    "start:dev": "node ./local/src/devIndex.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/udevbe/greenfield.git"
  },
  "keywords": [
    "wayland",
    "html5",
    "compositor",
    "linux",
    "display",
    "server"
  ],
  "author": "Erik De Rijcke <derijcke.erik@gmail.com> (http://www.udev.be)",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/udevbe/greenfield/issues"
  },
  "homepage": "https://github.com/udevbe/greenfield#readme",
  "dependencies": {
    "epoll": "^2.0.1",
    "express": "4.16.3",
    "fastcall": "^0.2.6",
    "gstreamer-superficial": "1.0.0",
    "wayland-server-bindings-runtime": "0.0.50",
    "westfield-runtime-client": "0.0.21",
    "westfield-runtime-server": "0.0.21",
    "wrtc": "^0.1.5",
    "ws": "^5.2.0",
    "greenfield-native": "file:./local/native"
  },
  "devDependencies": {
    "clean-webpack-plugin": "^0.1.19",
    "copy-webpack-plugin": "^4.5.1",
    "css-loader": "^0.28.11",
    "html-webpack-plugin": "^3.2.0",
    "standard": "11.0.1",
    "style-loader": "^0.20.3",
    "wayland-server-bindings-generator": "0.0.50",
    "webpack": "^4.12.0",
    "webpack-cli": "^2.1.5",
    "webpack-closure-compiler": "2.1.6",
    "webpack-dev-middleware": "^3.1.3",
    "webpack-hot-middleware": "^2.22.2",
    "webpack-merge": "^4.1.3",
    "westfield-scanner-client": "0.0.21",
    "westfield-scanner-server": "0.0.21"
  },
  "pkg": {
    "scripts": [
      "./local/src/*.js",
      "local/src/protocol/wayland/*.js",
      "./node_modules/wayland-server-bindings-runtime/src"
    ],
    "assets": [
      "./browser/dist/**/*"
    ]
  },
  "optionalDependencies": {
    "bufferutil": "^3.0.5"
  }
}
